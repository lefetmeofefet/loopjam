{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/",
        "backend/src/types/*"
      ]
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "frontend"
  ]
}